<section>
    <h2>Vista de Productos</h2>
    {{#if productos}}

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td>
                    <img src="{{this.thumbnail}}" alt="{{this.title}}">
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h2>No se encontraron productos</h2>
    {{/if}}
    <div>
        <a href="./productos">
            <button>Agregar producto</button>
        </a>
    </div>
</section>